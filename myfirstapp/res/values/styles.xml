<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="Theme.Myfirstapp" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_myfirstapp</item>
        <item name="popupMenuStyle">@style/PopupMenu.Myfirstapp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Myfirstapp</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Myfirstapp</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Myfirstapp</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Myfirstapp</item>
        <item name="actionModeBackground">@drawable/cab_background_top_myfirstapp</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_myfirstapp</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Myfirstapp</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Myfirstapp.Widget</item>

    </style>

    <style name="ActionBar.Solid.Myfirstapp" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_myfirstapp</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_myfirstapp</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_myfirstapp</item>
        <item name="progressBarStyle">@style/ProgressBar.Myfirstapp</item>
    </style>

    <style name="ActionBar.Transparent.Myfirstapp" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_myfirstapp</item>
        <item name="progressBarStyle">@style/ProgressBar.Myfirstapp</item>
    </style>
	
    <style name="PopupMenu.Myfirstapp" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_myfirstapp</item>	
    </style>
	
    <style name="DropDownListView.Myfirstapp" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_myfirstapp</item>
    </style>

    <style name="ActionBarTabStyle.Myfirstapp" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_myfirstapp</item>
    </style>
	
    <style name="DropDownNav.Myfirstapp" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_myfirstapp</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_myfirstapp</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_myfirstapp</item>
    </style>
    
    <style name="ProgressBar.Myfirstapp" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_myfirstapp</item>
    </style>
    
    <style name="ActionButton.CloseMode.Myfirstapp" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_myfirstapp</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Myfirstapp.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Myfirstapp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Myfirstapp</item>
    </style>
    
</resources>
