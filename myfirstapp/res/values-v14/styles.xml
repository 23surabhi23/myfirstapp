<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
     <style name="Theme.Myfirstapp" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_myfirstapp</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Myfirstapp</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Myfirstapp</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Myfirstapp</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Myfirstapp</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Myfirstapp</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_myfirstapp</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_myfirstapp</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Myfirstapp</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Myfirstapp.Widget</item>

    </style>

    <style name="ActionBar.Solid.Myfirstapp" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background_textured_myfirstapp</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_myfirstapp</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_myfirstapp</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Myfirstapp</item>
    </style>

    <style name="ActionBar.Transparent.Myfirstapp" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_myfirstapp</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Myfirstapp</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Myfirstapp.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Myfirstapp</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Myfirstapp</item>
    </style>
    
</resources>
